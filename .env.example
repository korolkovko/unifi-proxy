# Server Configuration
PORT=443
HEALTH_PORT=3000

# IP Whitelist (comma-separated, supports CIDR notation)
# Example: ALLOWED_IPS=192.168.1.1,10.0.0.0/24,203.0.113.5
ALLOWED_IPS=0.0.0.0/0

# Logging Configuration
LOG_LEVEL=info
# Set to 'true' for pretty logging in development
LOG_PRETTY=false

# Connection Timeouts (milliseconds)
PROXY_CONNECT_TIMEOUT=10000
PROXY_TIMEOUT=300000
PREREAD_TIMEOUT=10000

# Rate Limiting (connections per IP per minute)
RATE_LIMIT_PER_IP=100
